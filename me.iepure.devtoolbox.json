{
    "app-id" : "me.iepure.devtoolbox",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "devtoolbox",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "pypi-dependencies.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                "tag": "v0.8.1"
                }
	        ]
	    },
        {
            "name" : "devtoolbox",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddebug=false"
            ],
            "post-install": [
                "mv /app/bin/devtoolbox /app/bin/devtoolbox-bin",
                "install -Dm755 /app/devtoolbox/devtoolbox-run-script /app/bin/devtoolbox"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/aleiepure/devtoolbox",
                    "tag": "v1.1",
                    "commit": "a345dd88d1c67f682853c03984415061515a9635"
                }
            ]
        }
    ]
}
